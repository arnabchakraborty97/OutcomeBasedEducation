<% include ../partials/header %>

	<div class="card">
		<div class="card-header">
			<h2 class="text-center"><%= title %></h2>
		</div>
		<div class="card-body">
			
			<form <% if (typeof tool == 'undefined') { %> action="/tools/store" <% } else { %> action="/tools/<%= tool.id %>?_method=PUT" <% } %> method="POST">
				
				<label for="name">Name</label>
				<input type="text" id="name" <% if(typeof tool != 'undefined') { %> value="<%= tool.name %>" <% } %> name="name" class="form-control">

				<label for="group">Group</label>
				<select class="form-control" id="group" name="groupId">
					
					<% groups.forEach((group) => { %>
						<option value="<%= group.id %>" <% if (typeof tool != 'undefined') { %> <% if (tool.Group.id == group.id) { %> selected <% } %> <% } %>><%= group.name %> - <%= group.Course.code %> - <%= group.Course.name %></option>
					<% }) %>

				</select>
				

				<br>

				<div class="text-center">
					<input type="submit" value="Save" class="btn btn-success">
				</div>

			</form>

		</div>
	</div>
		
<% include ../partials/footer %>