<% include ../partials/header %>
		
	<% if(Object.keys(departments).length) { %>

		<table class="table table-bordered">
			<thead class="thead-dark">
				<tr>
					<th>#</th>
					<th>Department Name</th>
					<th colspan="2">Actions</th>
				</tr>
			</thead>
			<tbody class="table-light">
				
				<% departments.forEach(function (department) { %>

					<tr>
						<td><%= department.id %></td>
						<td><%= department.name %></td>
						<td>
							<a class="btn btn-sm btn-secondary" href="/departments/<%= department.id %>/edit">Edit</a>
						</td>
						<td>
							<form action="/departments/<%= department.id %>?_method=DELETE" method="POST">
								<input type="submit" value="Delete" class="btn btn-sm btn-danger">
							</form>
						</td>
					</tr>

				<% }) %>

			</tbody>
		</table>

	<% } else { %>
		Nothing to show
	<% } %>

	<div class="text-center">
		<a href="/departments/create" class="btn btn-success">Add Department</a>
	</div>

<% include ../partials/footer %>