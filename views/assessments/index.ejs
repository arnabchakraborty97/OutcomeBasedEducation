<% include ../partials/header %>
	
	<div class="text-center">
		<a href="/assessments/create" class="btn btn-success">Add Assessment</a>
	</div>
	<br>


	<% if(typeof assessments !== 'undefined') { %>

		<% if(Object.keys(assessments).length) { %>

			<table class="table table-bordered">
				<thead class="thead-dark">
					<tr>
						<th>Student</th>
						<th>Course</th>
						<th>Program Outcome</th>
						<th>Score</th>
					</tr>
				</thead>
				<tbody class="tbody-light">
					<% assessments.forEach((assessment) => { %>
						<tr>
							<td><%= assessment.Student.name %></td>
							<td><%= assessment.Course.name %></td>
							<td><%= assessment.ProgramOutcome.name %></td>
							<td><%= assessment.score %></td>
						</tr>
					<% }) %>
				</tbody>
			</table>
		<% } %>

	<% } %>

<% include ../partials/footer %>