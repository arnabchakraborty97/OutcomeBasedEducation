<% include ../partials/header %>

	<div class="card">
		<div class="card-header">
			<%= title %>
		</div>
		<div class="card-body">
			<form method="POST" action="/students/importCSV" enctype="multipart/form-data">
				
				<div class="row">
					<label for="batch" class="col-form-label text-md-right col-md-2">Batch</label>
					<select id="batch" name="batch" class="form-control col-md-3">
						<option value="2013-2017">2013-2017</option>
						<option value="2014-2018">2014-2018</option>
						<option value="2015-2019">2015-2019</option>
						<option value="2016-2020">2016-2020</option>
						<option value="2017-2021">2017-2021</option>
						<option value="2018-2022">2018-2022</option>
						<option value="2019-2023">2019-2023</option>
						<option value="2020-2024">2020-2024</option>
						<option value="2021-2025">2021-2025</option>
					</select>

					<label for="department" class="col-form-label text-md-right col-md-2">Department</label>
					<select id="department" name="department" class="form-control col-md-3">
						<% departments.forEach((department) => { %>

							<option value="<%= department.id %>"><%= department.name %></option>

						<% }) %>
					</select>
				</div>

				<br>
				<div class="row">
					<label for="csv" class="col-form-label col-md-2 text-md-right offset-md-1">CSV</label>
					<input type="file" id="csv" name="csv" class="form-control col-md-6">
				</div>

				<br>
				<div class="text-center">
					<input type="submit" value="Submit" class="btn btn-success">
				</div>

			</form>
		</div>
	</div> 

<% include ../partials/footer %>